{
  "name": "pixlise",
  "scripts": {
    "ng": "ng",
    "prestart": "cp ./node_modules/pixlise-wasmoon/dist/glue.wasm ./src/app/expression-language/lua && cp ../CHANGELOG.md .",
    "start": "clear&&ng serve",
    "prebuild": "cp ./node_modules/pixlise-wasmoon/dist/glue.wasm ./src/app/expression-language/lua  && cp ../CHANGELOG.md .",
    "build": "ng build && npm run assets:backup && npm run sentry:sourcemaps && npm run assets:replace",
    "watch": "ng build --watch --configuration development",
    "postinstall": "node src/version.js",
    "pretest": "cp ./node_modules/pixlise-wasmoon/dist/glue.wasm ./src/app/expression-language/lua",
    "test": "clear&&ng test",
    "lint": "ng lint",
    "assets:backup": "mkdir -p /tmp/pixlise-assets/assets/ && mv ./dist/pixlise/browser/assets /tmp/pixlise-assets/assets/ && ls -al /tmp/pixlise-assets/assets/",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org sentry --project pixlise ./dist/pixlise/browser/ && sentry-cli --url https://sentry.pixlise.org sourcemaps upload --org sentry --project pixlise ./dist/pixlise/browser",
    "assets:replace": "ls -al /tmp/pixlise-assets/assets/ && mv /tmp/pixlise-assets/assets ./dist/pixlise/browser/"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.0",
    "@angular/cdk": "^20.1.0",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/material": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/platform-browser-dynamic": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@auth0/auth0-angular": "^2.2.1",
    "@sentry/angular": "^9.0.0",
    "@sentry/cli": "^2.50.2",
    "@types/file-saver": "^2.0.7",
    "@types/three": "^0.178.1",
    "auth0-js": "^9.28.0",
    "compressorjs": "^1.2.1",
    "delaunator": "^5.0.1",
    "dexie": "^4.0.0",
    "dropzone": "^6.0.0-beta.2",
    "file-saver": "^2.0.5",
    "geotiff": "^2.0.7",
    "git-describe": "^4.1.1",
    "google-protobuf": "^3.21.4",
    "html2canvas": "^1.4.1",
    "jsep": "^1.2.0",
    "jszip": "^3.10.1",
    "marked": "^15.0.0",
    "mathjs": "^14.0.0",
    "monaco-editor": "^0.52.0",
    "ngx-color-picker": "^20.0.0",
    "ngx-dropzone": "^3.1.0",
    "ngx-markdown": "^20.0.0",
    "papaparse": "^5.4.1",
    "pixlise-wasmoon": "^1.15.3",
    "polygon-clipping": "^0.15.3",
    "prismjs": "^1.29.0",
    "protobufjs": "^7.5.3",
    "quickhull": "^1.0.3",
    "rxjs": "~7.8.0",
    "three": "^0.179.1",
    "ts-proto": "^2.7.0",
    "tslib": "^2.3.0",
    "tweakpane": "^4.0.5",
    "voronoi": "^1.0.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.3",
    "@angular-eslint/builder": "20.1.1",
    "@angular-eslint/eslint-plugin": "20.1.1",
    "@angular-eslint/eslint-plugin-template": "20.1.1",
    "@angular-eslint/schematics": "20.1.1",
    "@angular-eslint/template-parser": "20.1.1",
    "@angular/build": "^20.1.1",
    "@angular/cli": "^20.1.1",
    "@angular/compiler-cli": "^20.1.0",
    "@eslint/js": "^9.31.0",
    "@tweakpane/core": "^2.0.5",
    "@types/auth0-js": "^9.21.6",
    "@types/dropzone": "^5.7.4",
    "@types/jasmine": "~5.1.0",
    "@types/papaparse": "^5.3.8",
    "angular-eslint": "^20.1.1",
    "eslint": "^9.0.0",
    "jasmine-core": "^5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.38.0"
  },
  "browser": {
    "child_process": false,
    "fs": false,
    "path": false,
    "crypto": false,
    "url": false,
    "module": false,
    "os": false,
    "http": false,
    "https": false
  }
}
