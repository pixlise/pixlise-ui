{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "esModuleInterop": true,
    //"emitDecoratorMetadata": true, <-- results in Cannot access 'ViewStateService' before initialization at: annotation-editor.component.ts:79
    "allowSyntheticDefaultImports": true,
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
